{
  "name": "slide-creator-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd server && bun --watch src/api.ts",
    "client": "npx serve client",
    "build": "echo 'No build step for root'",
    "install:all": "npm install && cd server && bun install"
  },
  "devDependencies": {
    "concurrently": "^8.0.0"
  }
}